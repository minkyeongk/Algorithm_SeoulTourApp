<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            app:srcCompat="@drawable/trip_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참고할 만한 여행사이트"
                android:layout_marginStart="16dp"
                android:gravity="bottom"
                android:textSize="25sp"
                android:textColor="#594743"
                android:textStyle="bold"
                android:background="#ffffff"
                android:paddingTop="10dp" />

            <ImageButton
                android:layout_marginTop="10dp"
                android:id="@+id/seoul_site"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="#ffffff"
                app:srcCompat="@drawable/site_seoultrip" />

            <ImageButton
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/korea_site"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="#ffffff"
                app:srcCompat="@drawable/korea_tour" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="대중교통 정보"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"
                android:textColor="#594743"
                android:textStyle="bold"
                android:background="#FFFFFF" />

            <ImageButton
                android:id="@+id/metro_site"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/metro_site" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:srcCompat="@drawable/buff" />
    </LinearLayout>

</ScrollView>